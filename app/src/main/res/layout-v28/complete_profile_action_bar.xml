<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_arrow_back_ios_new_24"
        android:background="@color/white"
        android:id="@+id/complete_profile_back_button"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linear_layout"
        android:orientation="vertical"
        android:layout_marginStart="10dp"
        android:layout_toRightOf="@+id/complete_profile_back_button">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="personal_details"
            android:textColor="@color/purple_700"
            android:textSize="14sp"
            android:id="@+id/complete_profile_personal_details"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Suraj sharma"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="25sp"
            android:id="@+id/complete_profile_name"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123456789"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:id="@+id/complete_profile_mobile_number"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="suraj@gmail.com"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:id="@+id/complete_profile_email"/>


    </LinearLayout>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/complete_profile_image"
        android:src="@drawable/profile_pic"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"/>


</RelativeLayout>